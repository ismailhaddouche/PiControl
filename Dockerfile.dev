# Development Dockerfile for PiControl
# This is optimized for development with hot reload

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
COPY requirements-lock.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements-lock.txt

# Copy application code (will be mounted in docker-compose for hot reload)
COPY app/ ./app/

# Create directories
RUN mkdir -p /var/lib/picontrol /var/log/picontrol

# Expose port
EXPOSE 8000

# Run application (override in docker-compose.yml for development)
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
